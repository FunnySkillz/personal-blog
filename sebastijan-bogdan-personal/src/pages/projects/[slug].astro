---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, getEntry } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((p) => ({
    params: { slug: p.slug }
  }));
}

const { slug } = Astro.params;

const project = await getEntry("projects", slug);
if (!project) throw new Error(`Project not found: ${slug}`);

const { Content } = await project.render();
---

<BaseLayout
  title={`${project.data.title} | Sebastijan Bogdan`}
  description={project.data.description}
>
  <article class="post-content">
    <h1>{project.data.title}</h1>

    <p class="muted">
      {project.data.role} 路 {project.data.ownership} 路 {project.data.timeline}
    </p>

    <p class="muted">{project.data.stack.join(" 路 ")}</p>

    {(project.data.githubUrl || project.data.liveUrl) && (
      <p class="muted">
        {project.data.githubUrl && <a href={project.data.githubUrl}>GitHub</a>}
        {project.data.githubUrl && project.data.liveUrl && " 路 "}
        {project.data.liveUrl && <a href={project.data.liveUrl}>Live</a>}
      </p>
    )}

    <hr class="divider" />

    <Content />
  </article>
</BaseLayout>
