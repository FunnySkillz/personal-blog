---
const rawPathname = Astro.url.pathname;
const pathname = rawPathname !== "/" && rawPathname.endsWith("/")
  ? rawPathname.slice(0, -1)
  : rawPathname;
const isEnglish = pathname === "/en" || pathname.startsWith("/en/");
const localePrefix = isEnglish ? "/en" : "";
const dePath = isEnglish
  ? pathname.replace(/^\/en(?=\/|$)/, "") || "/"
  : pathname;
const enPath = isEnglish
  ? pathname
  : pathname === "/"
    ? "/en/"
    : `/en${pathname}`;

const isHomeActive = pathname === "/" || pathname === "/en";
const isWritingActive =
  pathname === "/writing" ||
  pathname.startsWith("/writing/") ||
  pathname === "/en/writing" ||
  pathname.startsWith("/en/writing/");
const isProjectsActive =
  pathname === "/projects" ||
  pathname.startsWith("/projects/") ||
  pathname === "/en/projects" ||
  pathname.startsWith("/en/projects/");
const isAboutActive = pathname === "/about" || pathname === "/en/about";
const labels = {
  writing: isEnglish ? "Writing" : "Schreiben",
  projects: isEnglish ? "Projects" : "Projekte",
  about: isEnglish ? "About" : "\u00dcber"
};
---

<header>
  <nav class="nav-wrap" aria-label="Main navigation">
    <a href={`${localePrefix}/` || "/"} class:list={["brand", "nav-link", { active: isHomeActive }]}>
      Sebastijan Bogdan
    </a>
    <div class="nav-links">
      <a
        href={`${localePrefix}/writing`}
        class:list={["nav-link", { active: isWritingActive }]}
      >
        {labels.writing}
      </a>
      <a
        href={`${localePrefix}/projects`}
        class:list={["nav-link", { active: isProjectsActive }]}
      >
        {labels.projects}
      </a>
      <a
        href={`${localePrefix}/about`}
        class:list={["nav-link", { active: isAboutActive }]}
      >
        {labels.about}
      </a>
    </div>
    <div class="lang-switch" aria-label="Language switch">
      <a href={dePath} aria-current={!isEnglish ? "page" : undefined}>DE</a>
      <span>|</span>
      <a href={enPath} aria-current={isEnglish ? "page" : undefined}>EN</a>
    </div>
  </nav>
  <hr class="nav-divider" />
</header>

<style>
  .nav-wrap {
    width: min(100%, 720px);
    margin: 0 auto;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .brand {
    font-weight: 500;
    color: #111111;
    letter-spacing: -0.01em;
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.1rem;
    color: #222222;
  }

  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    color: #222222;
  }

  .lang-switch a[aria-current="page"] {
    opacity: 0.55;
    pointer-events: none;
  }

  .nav-divider {
    border: 0;
    border-top: 1px solid #e5e7eb;
    margin: 0;
  }

  @media (max-width: 767px) {
    .nav-wrap {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.4rem;
    }

    .nav-links {
      font-size: 0.95rem;
      gap: 0.9rem;
    }
  }

  @media (min-width: 768px) {
    .nav-wrap {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }
</style>
